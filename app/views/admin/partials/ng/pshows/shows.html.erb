<div class="admin-content">
  <md-list>
    <md-subheader class="md-no-sticky page-title"><h1 class="md-headline">Список сериалов ожидающих добавления</h1></md-subheader>
    <md-list-item class="md-2-line md-no-proxy-no" ng-repeat="item in items.index" ng-click="items.edit(item, $event)">
      <div class="md-list-item-text">
        <h3>{{item.title_ru}} ({{item.year}})</h3>
        <p>{{item.title_en}}</p>
      </div>
      <div class="md-list-item-text">
        <h3>{{item.slogan_ru}}</h3>
        <p>{{item.slogan_en}}</p>
      </div>
      <div class="md-list-item-text">
        <h3>{{items.model.enum_label(item.role, 'role')}}</h3>
      </div>
      <div class="md-list-item-text" flex="5">
        <h3>{{item.id}}</h3>
      </div>
      <md-divider ng-if="!$last"></md-divider>
    </md-list-item>
  </md-list>
</div>

<div layout="row">
  <md-button ng-click="items.new()" class="md-primary md-fab md-fab-bottom-right">
    <md-icon>add</md-icon>
    <md-tooltip>
      Добавить сериал
    </md-tooltip>
  </md-button>
</div>