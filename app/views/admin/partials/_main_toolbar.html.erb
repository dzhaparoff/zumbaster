<md-toolbar class="site-content-toolbar">
  <div class="md-toolbar-tools admin-toolbar-tools" tabIndex="-1">
    <md-button class="md-icon-button" hide-gt-md aria-label="Открыть меню" ng-click="main.openMenu()">
      <md-icon md-svg-src="/assets/svg/ic_menu_24px.svg"></md-icon>
    </md-button>

    <div layout="row" flex class="fill-height">
      <h2 class="md-toolbar-item md-breadcrumb md-headline">
              <span ng-if="main.menu.currentPage.name !== main.menu.currentSection.name">
                <span hide-sm hide-md>{{main.menu.currentSection.name}}</span>
                <span class="md-separator-icon" hide-sm hide-md>
                <span class="md-visually-hidden">-</span>
                <md-icon aria-hidden="true">navigate_next</md-icon>
               </span>
              </span>
        <span class="md-breadcrumb-page">{{main.menu.currentPage | humanizeDoc}}</span>
      </h2>

      <span flex></span> <!-- use up the empty space -->

      <md-progress-circular class="md-hue-3" md-diameter="20px" md-mode="{{main.loading.mode}}"></md-progress-circular>

      <md-menu md-offset="10 40" md-position-mode="target-right target">
        <md-button aria-label="Open phone interactions menu" class="md-icon-button" ng-click="main.openContextMenu($mdOpenMenu, $event)">
          <md-icon md-menu-origin>account_circle</md-icon>
        </md-button>
        <md-menu-content width="3">
          <md-menu-item>
            <md-button ng-click="main.closeContextMenu()" ui-sref="users.edit({resource_id: <%= current_user.id %>})">
              <md-icon>settings</md-icon>
              Настройки
            </md-button>
          </md-menu-item>
          <md-menu-item>
            <md-button disabled="disabled" ng-click="main.closeContextMenu()">
              <md-icon>forum</md-icon>
              Техподдержка
            </md-button>
          </md-menu-item>
          <md-menu-divider></md-menu-divider>
          <md-menu-item>
            <md-button ng-click="main.closeContextMenu" href="/logout">
              <md-icon>exit_to_app</md-icon>
              Выход
            </md-button>
          </md-menu-item>
        </md-menu-content>
      </md-menu>
    </div>

  </div>
  <!--<md-progress-linear md-mode="{{main.loading.mode}}"></md-progress-linear>-->
</md-toolbar>