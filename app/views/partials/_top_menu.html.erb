<ul class="title-area">
  <li class="name">
    <h1><a href="/">HD Serials</a></h1>
  </li>
  <li class="toggle-topbar menu-icon"><a href="#"><span>Меню</span></a></li>
</ul>
<section class="top-bar-section">
  <!-- Right Nav Section -->
  <!--<ul class="right">-->
    <!--<li><a href="#" class="link">Вход</a></li>-->
  <!--</ul>-->
  <div data-site-search class="right site-search hide-for-small-only">
    <noindex>
    <form name="search_form" data-ng-submit="search.goSearch()">
    <ul class="menu">
      <li><input type="search" placeholder="Поиск по сериалам" data-ng-model="search.phrase"></li>
      <li><button data-ng-click="search.goSearch()" type="button" class="button">Найти</button></li>
    </ul>
      <div ng-cloak class="search-result" data-ng-if="search.showFounded() || search.nothingFound()">
        <div ng-if="search.nothingFound()" class="nothing-found">По вашему запросу ничего не найдено</div>
        <div class="items">
          <div class="item" data-ng-class="{'last': $last}" data-ng-repeat="item in search.result_existed">
            <div class="poster">
              <a href="/{{item.existed.slug_ru}}"><img data-ng-src="{{item.image}}"></a>
            </div>
            <div class="body">
              <div class="title"><a href="/{{item.existed.slug_ru}}">{{item.existed.title_ru}}</a></div>
              <div class="en-title">{{item.existed.title_en}} ({{item.existed.year}})</div>
              <div class="seasons">
                <div class="season" data-ng-class="{'last': $last}" ng-repeat="season in item.existed_seasons">
                  <a data-ng-href="{{search.getSeasonLink(item, season.slug_ru)}}">Сезон {{season.number}}</a> <span>({{season.aired_episodes}} из {{season.episode_count}})</span>
                </div>
              </div>
            </div>
          </div>
          <div class="other-title" data-ng-if="search.otherShows()">Другие сериалы<span>их пока нет на нашем сайте:</span></div>
          <div class="item" data-ng-class="{'last': $last}" data-ng-repeat="item in search.result_not_existed">
            <div class="poster">
              <img data-ng-src="{{item.image}}">
            </div>
            <div class="body">
              <div class="title">{{item.ruTitle}}</div>
              <div class="en-title">{{item.title}}</div>
            </div>
          </div>
        </div>
      </div>
    </form>
    </noindex>
  </div>
  <!-- Left Nav Section -->
  <ul class="left">
    <li class="has-dropdown">
      <a href="#">Жанры</a>
      <ul class="dropdown">
        <% genres_list.each do |genre| %><li><a href="<%= genre_path genre.slug_ru %>" class="<%= cp(genre_path genre.slug_ru) %>"><%= genre.name_ru %></a></li><%end %>
      </ul>
    </li>
    <li class="divider"></li>
    <!--<li><a href="#">Последние обновления</a></li>-->
    <li><a href="<%= calendar_path %>">Календарь выхода серий</a></li>
  </ul>
</section>
