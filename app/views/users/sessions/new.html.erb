<div class="row" blur-bg>
  <div class="small-12 medium-6 large-5 small-centered column login-form fullscreen-form">
    <div class="form-title">Вход</div>
    <div class="panel radius">
          <% unless alert.nil? -%>
          <div data-alert class="alert-box warning radius">
            <%= alert %>
            <a href="#" class="close">&times;</a>
          </div>
          <% end -%>
          <% unless notice.nil? -%>
          <div data-alert class="alert-box radius">
            <%= notice %>
            <a href="#" class="close">&times;</a>
          </div>
          <% end -%>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
              <div class="small-12 small-centered column">
                <%= f.label :email, 'E-mail' %>
                <%= f.email_field :email, autofocus: true, class: "radius" %>
              </div>
          </div>
          <div class="row">
            <div class="small-12 small-centered column">
                <%= f.label :password, 'Пароль' %>
                <%= f.password_field :password, autocomplete: "off", class: "radius" %>
            </div>
          </div>
          <div class="row">
            <% if devise_mapping.rememberable? -%>
                <div class="small-2 column">
                  <div class="switch round">
                        <%= f.check_box :remember_me %>
                        <label for="user_remember_me"></label>
                  </div>
                </div>
                <div class="small-6 column vertical-align-middle"><%= f.label :remember_me, "Запомнить меня" %></div>
            <% end -%>
            <div class="small-4 text-right column">
              <%= f.submit "Войти", class: 'radius submit button' %>
            </div>
          </div>
          <% end %>

          <div class="row">
            <div class="small-12 small-centered text-center column">
              <div class="divider">Вы можете войти, используя социальные сети</div>
            </div>
          </div>
          <div class="row">
            <div class="small-12 small-centered text-center column">
              <ul class="button-group radius">
                <%= render "users/shared/links" %>
              </ul>
            </div>
          </div>
      <div class="row">
        <div class="small-12 small-centered text-center column">
          <div class="divider">Вы еще не зарегистрированы? <a href="<%= new_user_registration_path %>">Зарегистрироваться</a></div>
        </div>
      </div>
      <canvas id="innerBlurBg"></canvas>
    </div>
  </div>
</div>